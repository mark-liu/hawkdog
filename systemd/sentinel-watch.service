[Unit]
Description=hawkdog (file access alert daemon)
After=network-online.target

[Service]
Type=simple
WorkingDirectory=%h/.local/share/sentinel-watch
ExecStart=%h/.local/share/sentinel-watch/sentinel-watch
Restart=always
RestartSec=2

# Hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=%h/.config/sentinel-watch %h/.local/share/sentinel-watch %h/.clawdbot/credentials

[Install]
WantedBy=default.target
